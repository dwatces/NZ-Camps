<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/stylesheets/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/stylesheets/app.css" />
    <link rel="stylesheet" href="/stylesheets/stars.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <script src="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js"></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css"
      rel="stylesheet"
    />

    <title>NZ Camps</title>
  </head>
  <body class="d-flex flex-column background__color">
    <%- include('../partials/navbar'); %>
    <main class="container mt-5">
      <div class="mt-5">
        <h1 class="text-center text-white">
          <span class="border__bottom">Explore Camps</span>
        </h1>
      </div>
      <%- include('../partials/flash'); %>
      <div class="mt-5" id="cluster-map"></div>
      <div class="mb-5"></div>
      <% for (let camp of camps) { %>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <% if(camp.images.length) { %>
            <img class="img-fluid" src="<%= camp.images[0].url %>" alt="" />
            <% } else { %>
            <img
              class="img-fluid"
              src="https://res.cloudinary.com/dghtrpkzv/image/upload/v1627010258/NZCamps/y7j02irkp4mysmhnq3o0.jpg"
              alt=""
            />
            <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= camp.title %></h5>
              <p class="card-text"><%= camp.description %></p>
              <p class="card-text">
                <small class="text-muted"><%= camp.location %></small>
              </p>

              <% if(camp.reviews.length) { %>
              <p class="mt-2 mb-0">Reviews:</p>
              <% for(let review of camp.reviews) { %>
              <p
                class="mb-3 starability-result"
                data-rating="<%= review.rating %>"
              ></p>
              <% } %> <% } else { %>
              <p class="card-text">No reviews found for this camp.</p>
              <% } %>
              <a class="btn btn-info text-white" href="/camps/<%=camp._id%>"
                >View <%=camp.title%></a
              >
            </div>
          </div>
        </div>
      </div>
      <%}%>
      <script>
        const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
        const camps = {features: <%-JSON.stringify(camps)%>};
      </script>
      <script src="js/clusterMap.js"></script>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/js/validateForms.js"></script>
    >
  </body>
</html>
