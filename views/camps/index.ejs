<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="mb-3"></div>
<% for (let camp of camps) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(camp.images.length) { %>
      <img class="img-fluid" src="<%= camp.images[0].url %>" alt="" />
      <% } else { %>
      <img
        class="img-fluid"
        src="https://res.cloudinary.com/dghtrpkzv/image/upload/v1627010258/NZCamps/y7j02irkp4mysmhnq3o0.jpg"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a class="btn btn-primary" href="/camps/<%=camp._id%>"
          >View <%=camp.title%></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const camps = {features: <%-JSON.stringify(camps)%>};
</script>
<script src="js/clusterMap.js"></script>
