<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 col-md-6 offset-md-3 col-xl-5 offset-xl-4">
      <div class="card shadow mt-5">
        <img
          src="https://images.unsplash.com/photo-1543539409-abc7b09bb042?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h4 class="card-title text-center">Login</h4>
          <form action="/login" method="POST" class="validForm" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
            </div>
            <button class="btn btn-success btn-large btn-block">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
